{
  "colors": {
    "primary": "#10b981",
    "secondary": "#059669",
    "accent": "#6ee7b7",
    "background": {
      "primary": "#0a0a0a",
      "secondary": "#171717",
      "tertiary": "#262626"
    },
    "text": {
      "primary": "#f5f5f5",
      "secondary": "#a3a3a3",
      "muted": "#737373"
    },
    "border": "#404040",
    "success": "#22c55e",
    "warning": "#f59e0b",
    "error": "#ef4444"
  },
  "fonts": {
    "sans": "Inter",
    "mono": "JetBrains Mono",
    "display": "Inter"
  },
  "animations": {
    "enableParticles": true,
    "enable3D": true,
    "particleCount": 6000,
    "enableScrollAnimations": true,
    "enableMicroInteractions": true,
    "reducedMotion": false
  },
  "layout": {
    "maxWidth": "1280px",
    "containerPadding": "1.5rem",
    "sectionSpacing": "6rem"
  },
  "effects": {
    "glassmorphism": {
      "enabled": true,
      "blur": "16px",
      "opacity": 0.05
    },
    "glow": {
      "enabled": true,
      "color": "#10b981",
      "intensity": "strong"
    }
  }
}
